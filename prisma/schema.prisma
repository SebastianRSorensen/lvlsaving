generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  //Dont use @id @default(autoincrement()) since its coming from the auth provider Kinde
  id               String  @id @unique
  email            String  @unique
  //------------------------------
  stripeCustomerId String? @unique @map(name: "stripe_customer_id")

